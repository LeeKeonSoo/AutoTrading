# ============================================
# Binance API Configuration
# ============================================
# For DEMO mode: Get demo API keys from https://testnet.binance.vision/
# For LIVE mode: Get real API keys from https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Trading environment: demo or live
# - demo: Paper trading with Binance Demo API (demo-api.binance.com)
#         Requires demo API keys from https://testnet.binance.vision/
#         You'll get virtual balance automatically - no real money involved!
# - live: Real trading with real money (USE WITH EXTREME CAUTION!)
BINANCE_DEMO_MODE=true

# ============================================
# Google Gemini API Configuration
# ============================================
# Get your FREE API key from: https://ai.google.dev/
# No credit card required! Free tier available for development and testing.
GEMINI_API_KEY=your_gemini_api_key_here

# Model selection
# - gemini-3-flash-preview: Latest preview model (RECOMMENDED)
# - gemini-2.0-flash-exp: Experimental, fast
# - gemini-1.5-pro: More capable, better reasoning
# - gemini-1.5-flash: Fast and efficient
GEMINI_MODEL=gemini-3-flash-preview

# Maximum tokens per request
GEMINI_MAX_TOKENS=4096

# Temperature (0.0-2.0, higher = more creative, lower = more focused)
GEMINI_TEMPERATURE=0.7

# ============================================
# Trading Configuration
# ============================================
# Trading pair (e.g., BTC/USDT, ETH/USDT)
TRADING_SYMBOL=BTC/USDT

# Market type: spot or futures
# - spot: Regular spot trading (no leverage)
# - futures: Futures trading with leverage (HIGHER RISK!)
MARKET_TYPE=spot

# Leverage for futures trading (1-125)
# WARNING: Higher leverage = Higher risk of liquidation!
# Recommended: 1-5x for beginners, 10x for experienced, 20x+ for experts only
LEVERAGE=5

# Margin mode for futures: isolated or cross
# - isolated: Loss limited to position margin (SAFER)
# - cross: Uses entire account balance as margin (RISKIER)
MARGIN_MODE=isolated

# Trading mode: backtest, paper, live
# - backtest: Test on historical data
# - paper: Simulate real-time trading without real money
# - live: Real trading with real money (USE WITH CAUTION!)
TRADING_MODE=backtest

# Timeframe for analysis (1m, 5m, 15m, 1h, 4h, 1d)
TRADING_TIMEFRAME=1h

# ============================================
# Risk Management
# ============================================
# Risk per trade as a percentage of account balance (0.02 = 2%)
RISK_PER_TRADE=0.02

# Maximum position size as a percentage of account balance (0.05 = 5%)
MAX_POSITION_SIZE=0.05

# Maximum daily loss as a percentage of account balance (0.10 = 10%)
MAX_DAILY_LOSS=0.10

# Maximum number of open positions
MAX_OPEN_POSITIONS=1

# Stop loss percentage (0.02 = 2%)
DEFAULT_STOP_LOSS_PCT=0.02

# Take profit percentage (0.05 = 5%)
DEFAULT_TAKE_PROFIT_PCT=0.05

# Minimum confidence level for LLM decisions (0.0-1.0)
MIN_CONFIDENCE=0.70

# ============================================
# Backtesting Configuration
# ============================================
# Initial capital for backtesting (USDT)
BACKTEST_INITIAL_CAPITAL=10000

# Backtest start date (YYYY-MM-DD)
BACKTEST_START_DATE=2024-01-01

# Backtest end date (YYYY-MM-DD or 'now')
BACKTEST_END_DATE=now

# Trading fee percentage (0.001 = 0.1%)
TRADING_FEE=0.001

# Slippage percentage (0.0005 = 0.05%)
SLIPPAGE=0.0005

# ============================================
# Database Configuration
# ============================================
# SQLite (default for local development)
DATABASE_URL=sqlite:///data/trading.db

# PostgreSQL (optional, for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_db

# ============================================
# Monitoring & Notifications
# ============================================
# Telegram Bot (optional, for notifications)
# Get bot token from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Enable/disable notifications
ENABLE_TELEGRAM=false

# Email notifications (optional)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_TO=recipient@example.com

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/trading.log

# Log rotation (max file size in MB)
LOG_MAX_SIZE=10

# Number of backup log files
LOG_BACKUP_COUNT=5

# ============================================
# Advanced Settings
# ============================================
# API rate limiting (requests per minute)
API_RATE_LIMIT=1200

# Retry attempts for failed API calls
API_RETRY_ATTEMPTS=3

# Timeout for API calls (seconds)
API_TIMEOUT=30

# Cache expiration for market data (seconds)
CACHE_EXPIRATION=60

# Enable debug mode
DEBUG=false
