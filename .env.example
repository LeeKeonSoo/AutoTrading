# ============================================
# Binance API Configuration
# ============================================
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Use testnet for safe testing (true) or real trading (false)
BINANCE_TESTNET=true

# Testnet URLs (automatically used when BINANCE_TESTNET=true):
# Spot Testnet: https://testnet.binance.vision
# Get testnet API keys: https://testnet.binance.vision/

# ============================================
# Anthropic API Configuration
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model selection (claude-3-5-sonnet-20240620, claude-3-opus-20240229, etc.)
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Maximum tokens per request
ANTHROPIC_MAX_TOKENS=4096

# ============================================
# Trading Configuration
# ============================================
# Trading pair (e.g., BTC/USDT, ETH/USDT)
TRADING_SYMBOL=BTC/USDT

# Trading mode: backtest, paper, live
# - backtest: Test on historical data
# - paper: Simulate real-time trading without real money
# - live: Real trading with real money (USE WITH CAUTION!)
TRADING_MODE=backtest

# Timeframe for analysis (1m, 5m, 15m, 1h, 4h, 1d)
TRADING_TIMEFRAME=1h

# ============================================
# Risk Management
# ============================================
# Risk per trade as a percentage of account balance (0.02 = 2%)
RISK_PER_TRADE=0.02

# Maximum position size as a percentage of account balance (0.05 = 5%)
MAX_POSITION_SIZE=0.05

# Maximum daily loss as a percentage of account balance (0.10 = 10%)
MAX_DAILY_LOSS=0.10

# Maximum number of open positions
MAX_OPEN_POSITIONS=1

# Stop loss percentage (0.02 = 2%)
DEFAULT_STOP_LOSS_PCT=0.02

# Take profit percentage (0.05 = 5%)
DEFAULT_TAKE_PROFIT_PCT=0.05

# Minimum confidence level for LLM decisions (0.0-1.0)
MIN_CONFIDENCE=0.70

# ============================================
# Backtesting Configuration
# ============================================
# Initial capital for backtesting (USDT)
BACKTEST_INITIAL_CAPITAL=10000

# Backtest start date (YYYY-MM-DD)
BACKTEST_START_DATE=2024-01-01

# Backtest end date (YYYY-MM-DD or 'now')
BACKTEST_END_DATE=now

# Trading fee percentage (0.001 = 0.1%)
TRADING_FEE=0.001

# Slippage percentage (0.0005 = 0.05%)
SLIPPAGE=0.0005

# ============================================
# Database Configuration
# ============================================
# SQLite (default for local development)
DATABASE_URL=sqlite:///data/trading.db

# PostgreSQL (optional, for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_db

# ============================================
# Monitoring & Notifications
# ============================================
# Telegram Bot (optional, for notifications)
# Get bot token from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Enable/disable notifications
ENABLE_TELEGRAM=false

# Email notifications (optional)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_TO=recipient@example.com

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/trading.log

# Log rotation (max file size in MB)
LOG_MAX_SIZE=10

# Number of backup log files
LOG_BACKUP_COUNT=5

# ============================================
# Advanced Settings
# ============================================
# API rate limiting (requests per minute)
API_RATE_LIMIT=1200

# Retry attempts for failed API calls
API_RETRY_ATTEMPTS=3

# Timeout for API calls (seconds)
API_TIMEOUT=30

# Cache expiration for market data (seconds)
CACHE_EXPIRATION=60

# Enable debug mode
DEBUG=false
